<%- include("partials/header") %>

<div class="container-fluid">
    <div class="resultBox text-center">
        <h1>Search results</h1>
        <div class="row justify-content-center">
            <% movieData["Search"].forEach(function(movie){ %>
                <div class="col-2 m-4" data-aos="fade-up">
                    <img src="<%= movie['Poster'] %>" alt="movie poster" width="40%">
                    <div class="title"><b><%= movie["Title"] %></b></div>
                    <div class="year"><%= movie["Year"] %></div>
                </div>
            <% }) %>
        </div>
        <a href="/" class="btn btn-large btn-outline-warning mt-3">Search again</a>
    </div>
</div>

<%- include("partials/footer") %>